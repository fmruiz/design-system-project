{
    "compilerOptions": {
        "outDir": "lib",
        "module": "esnext",
        "paths": {
            "@ds.f/*": [
                "../*"
            ]
        },
        "lib": [
            "DOM",
            "ESNext"
        ],
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "target": "esnext",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "declaration": true,
        "moduleResolution": "node",
        "types": [
            "jest",
            "node",
            "@testing-library/jest-dom"
        ]
    },
    "include": [
        "src",
        "jest-setup.ts"
    ],
    "exclude": [
        "node_modules",
        "lib"
    ]
}