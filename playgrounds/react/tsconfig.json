{
    "compilerOptions": {
        "outDir": "lib",
        "module": "esnext",
        "lib": [
            "DOM",
            "ESNext"
        ],
        "paths": {
            "@ds.f/*": [
                "../../packages/*"
            ]
        },
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "target": "esnext",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "declaration": true,
        "moduleResolution": "node"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "lib"
    ]
}